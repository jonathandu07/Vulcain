{% extends 'baseMin.html.twig' %}

{% block stylesheets %}
	{{ encore_entry_link_tags('app') }}
{% endblock %}

{% block javascripts %}
	{{ encore_entry_script_tags('app') }}
{% endblock %}

{% block body %}
	<section class="register-page">
		<div class="banner">
			<img src="{{ asset('build/images/Vulcain-NNAC.png') }}" alt="logo" onclick="history.back()">
			<h1>Cr√©er un compte</h1>
		</div>
		<main class="container-page">
			<div class="container-page__div-left">
				<img src="https://cdn-icons-png.flaticon.com/512/8011/8011201.png" alt="">
			</div>
			{# right #}
			<div class="container-page__div-right">
				{{ form_start(registrationForm) }}
				<div class="container-page__div-right__pseudo-email">
					{{ form_row(registrationForm.User_Pseudo) }}
					{{ form_row(registrationForm.email) }}
				</div>
				<div class="container-page__div-right__name-firstname">
					{{ form_row(registrationForm.User_Name) }}
					{{ form_row(registrationForm.User_Firstname) }}
				</div>
				<div class="container-page__div-right__password">
					{{ form_row(registrationForm.plainPassword, {}) }}
				</div>
				<div class="container-page__div-right__bottom">
					{{ form_row(registrationForm.User_phone_number) }}
					<div class="container-page__div-right__bottom__age-statut">
						{{ form_row(registrationForm.User_age) }}
						<div class="choice">
							{{ form_row(registrationForm.statut) }}
						</div>
					</div>
				</div>
				<div class="container-page__div-right__validations">
					<div>
						{{ form_row(registrationForm.agreeTerms) }}
					</div>

					<button type="submit" class="btn">Valider</button>
				</div>
				{{ form_end(registrationForm) }}
			</div>
		</main>
	</section>
{% endblock %}
